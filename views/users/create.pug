extends ../layout/master_layout.pug
block content
	h1 Create User
	if errors
		each error in errors
			.alert.alert-danger= error
	form(action="/users/create" , method="POST")
		.form-group
			label(for="name") Name
			input#name.form-control(name="name" type="text" , value=values ? values.name : "")
			//- //gia tri value luu lai ten tren the input
		.form-group
			label(for="phone") Phone
			input#phone.form-control(name="phone" type="text", value=values ? values.phone : "")
		.form-group
		label(for="email") Email
		input#email.form-control(name="email" type="text", value=values ? values.email : "")
		.form-group
		label(for="password") password
		input#password.form-control(name="password" type="text", value=values ? values.password : "")
		

		


		button.btn.btn-primary.mt-2 Create